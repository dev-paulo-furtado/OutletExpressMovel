<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment" >

    <org.imaginativeworld.whynotimagecarousel.ImageCarousel
        android:id="@+id/carousel_imagens"
        android:layout_width="match_parent"
        app:showTopShadow="false"
        app:showBottomShadow="false"
        app:autoPlay="true"
        app:autoPlayDelay="3000"
        app:showIndicator="true"
        app:indicatorMargin="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <org.imaginativeworld.whynotimagecarousel.ImageCarousel
        android:id="@+id/carousel_categorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:showTopShadow="false"
        app:showBottomShadow="false"
        app:showNavigationButtons="false"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/carousel_imagens"
        tools:layout_editor_absoluteX="0dp" />

    <org.imaginativeworld.whynotimagecarousel.ImageCarousel
        android:id="@+id/carousel_produtos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:showTopShadow="false"
        app:showBottomShadow="false"
        app:showNavigationButtons="false"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <org.imaginativeworld.whynotimagecarousel.ImageCarousel
        android:id="@+id/carousel_empresas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:showTopShadow="false"
        app:showBottomShadow="false"
        app:showNavigationButtons="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Empresas Parceiras"
        android:textColor="@color/primaryColor"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carousel_produtos" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Recomendado"
        android:textColor="@color/primaryColor"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carousel_categorias" />

</androidx.constraintlayout.widget.ConstraintLayout>